    public static double KdvCalculator(double buyer){
        double newBuyer = 0;
        double zeroValue = 0;
        if (buyer > 1000){
            zeroValue = buyer*(0.08);
             newBuyer = buyer+ zeroValue;
        }
        else if(buyer> 0 && buyer < 1000){
             zeroValue = buyer*(0.18);
             newBuyer = buyer + zeroValue;
        }
        return newBuyer;
    }
